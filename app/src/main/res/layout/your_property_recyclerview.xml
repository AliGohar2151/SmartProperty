<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:backgroundTint="@color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="project image"
            android:src="@drawable/project_placeholder"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:paddingTop="5dp"
        >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Merla house for rent"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"

            />
        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Merla house for rent. 6 rooms, 6 attach bathroom, 1 open kitchen with service kitchen, fully furnished house."
            android:textColor="@color/secondary_text"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/archivo"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demand: "
                android:textColor="@color/primary_text"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PKR "
                android:textColor="@color/accent"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txt_demand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30000"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/accent"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Location:"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="16dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/locationicon"
                />
            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Behria Town Phase 2, Islamabad"
                android:textColor="@color/primary_text"
                android:fontFamily="@font/roboto"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: "
                android:textColor="@color/primary_text"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Rent "
                android:textColor="@color/accent"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="2"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            app:icon="@drawable/editicon"
            />
        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/accent"
            android:layout_marginStart="10dp"
            app:icon="@drawable/deleteicon"
            app:iconTint="@color/white"

            />
    </LinearLayout>

</LinearLayout>
