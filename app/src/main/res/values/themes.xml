<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartProperty" parent="Theme.Material3.DayNight.NoActionBar">
            <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.SmartProperty" parent="Base.Theme.SmartProperty" />

    <style name="Theme.lightTheme" parent="Base.Theme.SmartProperty">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> <!-- Dark icons on the project detail screen -->
    </style>

    <style name="Theme.darkTheme" parent="Base.Theme.SmartProperty">
        <item name="android:statusBarColor">@color/secondary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- Dark icons on the project detail screen -->
    </style>
</resources>